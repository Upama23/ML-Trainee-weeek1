#!/bin/sh

commit_message_file=$1

# Check if the commit message contains tags like "feat", "fix", "refactor", etc.
if grep -iqE '^(feat|fix|refactor|chore|docs|style|test)(\(.+\))?!?:' "$commit_message_file"; then
  exit 0  # Commit message contains valid tags
else
  echo "Error: Commit message must start with a valid type tag (feat, fix, refactor, etc.)"
  exit 1  # Exit with non-zero status to reject the commit
fi
