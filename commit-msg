@echo off

set commit_message_file=%1

rem Check if the commit message contains tags like "feat", "fix", "refactor", etc.
findstr /I /R "^(feat^|fix^|refactor^|chore^|docs^|style^|test^)(\(.\+\))?!?:" "%commit_message_file%" > nul
if %errorlevel% == 0 (
    exit 0  rem Commit message contains valid tags
) else (
    echo Error: Commit message must start with a valid type tag (feat, fix, refactor, etc.)
    exit 1  rem Exit with non-zero status to reject the commit
)
